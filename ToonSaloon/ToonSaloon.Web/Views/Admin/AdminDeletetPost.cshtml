@model ToonSaloon.Models.BlogPost
@{
    ViewBag.Title = "AdminDeletetPost";
}
@section styles{
    <link rel='stylesheet' href='../../Content/app/HomePageStyles.css' type='text/css' />
}
<div  class="col-xs-3 bpost">
    <h1><strong>Deletet Post</strong></h1>
</div>
<br />

@using (Html.BeginForm())
{

<div class="row">
    <div class="col-sm-9 col-sm-offset-1 bpost">
        @Html.HiddenFor(p => p.Id)
        <div class="row">
            <div class="col-sm-2 datedate">
                <h2>@Model.DateCreated.ToString("MMM")</h2>
                <h3>@Model.DateCreated.ToString("dd")th</h3>
            </div>
            <div class="col-sm-10">
                <h2>@Model.Headline</h2>
                <h4>@Model.Subtitle</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>
                        <li data-target="#myCarousel" data-slide-to="3"></li>
                    </ol>

                    <!-- Wrapper for slides -->
                    <div class="carousel-inner" role="listbox">
                        @foreach (var image in Model.Imgs)
                        {
                            <div class="item active carouselheight">
                                <img src="@image.Source" alt="@image.Title">
                            </div>
                        }
                    </div>
                    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-2"></div>
            <div class="col-sm-8">
                @Model.Body
            </div>
        </div>
    </div>
</div>
    <br />
<div class="col-xs-3 bpost">
    <h3 style="color:red">Are you sure you want to delete this post?</h3>
    <div class="col-sm-offset-1">
        <button type="submit" class="btn btn-lg btn-danger">Delete</button>
        @Html.ActionLink("Cancel", "ManageCurrentPosts", "Admin", null, new { @class = "btn btn-sm btn-info" })
    </div>
</div>
}
