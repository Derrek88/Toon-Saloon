@model ToonSaloon.Models.CartoonOfTheDay
@{
    ViewBag.Title = "AdminEditToon";
}

@section styles{
    <link rel='stylesheet' href='../../Content/app/HomePageStyles.css' type='text/css' />
}
<br />

<div class="col-xs-4 bpost">
    <h2 class="text-center">Edit Toon</h2>
    @using (Html.BeginForm("AdminEditToon", "Admin", FormMethod.Post, new { enctype = "multipart/from-data" }))
    {
        @Html.HiddenFor(t => t.Id)
        <div class="form-group">
            <label>Show Name</label>
            @Html.TextBoxFor(t => t.ShowName, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Season</label>
            @Html.TextBoxFor(t => t.Season, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Episode</label>
            @Html.TextBoxFor(t => t.Episode, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Author</label>
            @Html.TextBoxFor(t => t.Author, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Image url</label>
            @Html.TextBoxFor(t => t.ImgUrl, new { @class = "form-control" })
        </div>
        <button type="submit" class="col-sm-offset-2 btn-lg btn-success">Edit</button>
        @Html.ActionLink("Cancel", "ManageToonOfTheDay", "Admin", null, new { @class = "btn btn-sm btn-info" })


    }
</div>
