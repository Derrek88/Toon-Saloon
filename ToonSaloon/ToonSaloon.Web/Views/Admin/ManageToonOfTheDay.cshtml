@model List<ToonSaloon.Models.CartoonOfTheDay>
@{
    ViewBag.Title = "ManageToonOfTheDay";
}

@section styles{
    <link rel='stylesheet' href='../../Content/app/ListPageStyles.css' type='text/css' />
}

<div class="row">
    <div class="col-sm-10 col-sm-offset-1 bpost" style="margin-bottom: 65%">
        <h1>
            <strong>Manage Toon Of The Day</strong>
        </h1>
        @Html.ActionLink("Add", "AdminAddToon", "Admin", null, new { @class = "btn btn-lg btn-success" })


        <table id="posts" class="table table-responsive  table-striped table-condensed">
            <thead>
                <tr class="active">
                    <th>Toon ID</th>
                    <th>Show Name</th>
                    <th>Season</th>
                    <th>Episode</th>
                    <th>Author</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {

                    foreach (var toon in Model)
                    {
                        <tr class="active">
                            <td>@toon.Id</td>
                            <td>@toon.ShowName</td>
                            <td>@toon.Season</td>
                            <td>@toon.Episode</td>
                            <td>@toon.Author</td>
                            <td>@toon.DateCreated.ToShortDateString()</td>
                            <td>@Html.ActionLink("Edit", "AdminEditToon", "Admin", new { id = toon.Id }, new { @class = "btn btn-sm btn-info" })</td>
                            <td>@Html.ActionLink("Delete", "AdminDeleteToon", "Admin", new { id = toon.Id }, new { @class = "btn btn-sm btn-danger" })</td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td style="color: red">There are no post in the blog.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>