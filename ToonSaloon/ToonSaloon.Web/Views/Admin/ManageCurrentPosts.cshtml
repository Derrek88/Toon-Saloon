@model List<ToonSaloon.Models.BlogPost>
@{
    ViewBag.Title = "ManageCurrentPosts";
}

@section styles{
    <link rel='stylesheet' href='../../Content/app/ListPageStyles.css' type='text/css' />
}
<div class="row">
    <div class="col-sm-10 col-sm-offset-1 bpost" style="margin-bottom: 65%">
        <h1>
            <strong>Manage Current Posts</strong>
        </h1>
        <div>
            @Html.ActionLink("Add", "AdminAddPost", "Admin", null, new { @class = "btn btn-lg btn-success" })
        </div>

        <table id="posts" class="table table-condensed table-striped table-responsive">
            <thead>
                <tr>
                    <th>Post ID</th>
                    <th>Post Title</th>
                    <th>Post Author</th>
                    <th>Post Date</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null)
                {
                    foreach (var post in Model)
                    {
                        <tr class="active">
                            <td>@post.Id</td>
                            <td>@post.Headline</td>
                            <td>@post.AuthorName</td>
                            <td>@post.DateCreated.ToShortDateString()</td>
                            <td>@Html.ActionLink("Edit", "AdminEditPost", "Admin", new { id = post.Id }, new { @class = "btn btn-sm btn-info" })
                            @Html.ActionLink("Delete", "AdminDeletetPost", "Admin", new { id = post.Id }, new { @class = "btn btn-sm btn-danger" })</td>
                        </tr>
                    }
                }
                else
                {
                    <tr><td style="color: red">There are no post in the blog.</td></tr>
                }
            </tbody>
        </table>
    </div>
</div>

