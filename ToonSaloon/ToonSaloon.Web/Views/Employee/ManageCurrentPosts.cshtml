@model List<ToonSaloon.Models.BlogPost>
@{
    ViewBag.Title = "ManageCurrentPosts";
}

@section styles{
    <link rel='stylesheet' href='../../Content/app/ListPageStyles.css' type='text/css' />
}
<div class="row">
    <div class="col-sm-10 col-sm-offset-1 bpost" style="margin-bottom: 65%">
        <h1>
            <strong>Manage Current Posts</strong>
        </h1>
        @Html.ActionLink("Add", "EmployeeAddPost", "Employee", null, new { @class = "btn btn-lg btn-success" })

        <table id="posts" class="table table-responsive table-condensed table-striped">
            <thead>
            <tr class="active">
                <th>Post Title</th>
                <th>Post Author</th>
                <th>Post Date</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @if (Model != null)
            {

                foreach (var post in Model)
                {
                    <tr class="active">
                        <td>@post.Headline</td>
                        <td>@post.AuthorName</td>
                        <td>@post.DateCreated.ToShortDateString()</td>
                        <td>@Html.ActionLink("Edit", "EmployeeEditPost", "Employee", new {id = post.Id}, new {@class = "btn btn-sm btn-info"})
                        @Html.ActionLink("Delete", "EmployeeDeletetPost", "Employee", new {id = post.Id}, new {@class = "btn btn-sm btn-danger"})</td>
                    </tr>
                }
            }
            else
            {
                <tr><td style="color: red">There are no post in the blog.</td></tr>
            }
            </tbody>
        </table>
        </div>
    </div>